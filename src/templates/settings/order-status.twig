        }) }}

        {{ forms.selectField({
            label: "Status: " ~ constant('ORDER_STATUS_COMPLETED', settings),
            name: 'settings[orderStatusCompleted]',
            value: settings.orderStatusCompleted,
            options: orderStatuses,
            errors: settings.getErrors('orderStatusCompleted'),
            required: false,
        }) }}

        <input type="submit" class="btn submit" value="{{ 'Save' }}">

    </form>

{% endblock %}
