{% extends "multisafepay/_layouts/settings" %}

{% import "_includes/forms" as forms %}

{% set selectedItem = "order-status-settings" %}

{% block sidebar %}
    <nav>
        <ul>
            <li class="heading"><span>General</span></li>
            <li>
                <a href="{{ url('multisafepay') }}">Settings</a>
            </li>
            <li>
                <a href="{{ url('multisafepay/settings/order-status') }}" class="sel">Order status settings</a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block content %}

    <form action="" method="post" accept-charset="UTF-8" data-saveshortcut>
        <input type="hidden" name="action" value="multisafepay/settings/save-settings">
        {{ redirectInput('multisafepay/settings/order-status') }}
        {{ csrfInput() }}


        {{ forms.selectField({
            label: "Status: " ~ constant('ORDER_STATUS_INITIALIZED', settings),
            name: 'settings[orderStatusInitialized]',
            value: settings.orderStatusInitialized,
            options: orderStatuses,
            errors: settings.getErrors('orderStatusInitialized'),
            required: false,
        }) }}

        {{ forms.selectField({
            label: "Status: " ~ constant('ORDER_STATUS_UNCLEARED', settings),
            name: 'settings[orderStatusUncleared]',
            value: settings.orderStatusUncleared,
            options: orderStatuses,
            errors: settings.getErrors('orderStatusUncleared'),
            required: false,
        }) }}

        {{ forms.selectField({
